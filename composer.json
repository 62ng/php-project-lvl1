{
    "name": "hexlet/code",
    "authors": [
        {
            "name": "Andrey Frolov",
            "email": "internet.buro@gmail.com"
        }
    ],
    "description": "Brain games (1-st project in hexlet)",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
	"autoload": {
		"psr-4": {
			"Php\\Package\\": "src"
		},
		"files": [
			"src/Cli.php",
			"src/Engine.php",
			"src/Games/brain-calc.php",
			"src/Games/brain-even.php",
			"src/Games/brain-gcd.php",
			"src/Games/brain-prime.php",
			"src/Games/brain-progression.php"
		]
	},
    "require": {
        "wp-cli/php-cli-tools": "^0.11.13"
    },
	"bin" : [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
	],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6"
    }
}
